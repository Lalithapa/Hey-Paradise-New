<section class="position-relative">
    <div class="brand-banner-container">
        <div class="brand-banner-media">
            <img src="{{ section.settings.carousel_desk | image_url }}" alt="" class="img-fluid desktop-screen">
            <img src="{{ section.settings.carousel_mobile | image_url }}" alt="" class="img-fluid mobile-screen">
        </div>
        <div class="brand-banner-text">
            {{ section.settings.qsirguwfh }}
        </div>
        <div class="container banner-shadow"></div>
    </div>
    {% render 'menus' %}
</section>
<style>
    .brand-banner-container {
        position: relative;
        overflow: hidden;
        top: -40px;
    }

    .brand-banner-media {
        padding-right: 50px;
        position: relative;
    }

    .brand-banner-media::after {
        content: "";
        position: absolute;
        right: 0;
        bottom: 0px;
        width: 90%;
        height: 90%;
        background-color: #e3e5ff;
        z-index: -1;
        border-radius: 0px 0px 0px 8px;
    }

    .brand-banner-media img {
        width: 100%;
        max-height: 700px;
        object-fit: cover;
        object-position: center;
        border-radius: 0px 0px 20px 0px;
    }

    .brand-banner-text {
        color: #fff;
        font-family: Poppins;
        font-size: 160px;
        font-weight: 600;
        line-height: 180px;
        /* 112.5% */
        text-transform: uppercase;
        position: absolute;
        right: -100px;
        bottom: 180px;
        transform: rotate(-90deg);
    }

    .banner-shadow {
        border-radius: 0px 0px 0px 8px;
        height: 50px;
        position: relative;
        background-color: #e3e5ff;
    }
    
    .banner-shadow::after {
        content: "";
        position: absolute;
        background-color: #e3e5ff;
        width: 100%;
        height: 100%;
        left: 100%;
    }


    @media only screen and (max-width:576px) {
        .brand-banner-text {
            font-size: 100px;
            line-height: 80px;
            transform: rotate(-90deg);
        }

    }

    @media only screen and (max-width:768px) {
        .brand-banner-text {
            font-size: 120px;
            right: -60px;
            bottom: 150px;
        }
    }
</style>
