.sidebar-tabs,
.sidebar-tabs-link {
width: 100%;
color: #393939;
font-size: 16px;
font-weight: 400;
line-height: 24px;
text-transform: uppercase;
text-decoration: none;
border: none;
background-color: transparent;
padding: 20px 0px;
display: flex;
align-items: center;
gap: 10px;
cursor: pointer;
}
.sidebar-tabs:hover,
.sidebar-tabs-link:hover {
  color: #393939;
}

.sidebar-tabs.no-border {
border-bottom: none;
}

.sidebar-tabs.active {
font-weight: 500;
position: relative;
}

.sidebar-tabs.active::before {
content: "";
background-image: url("./right-arrow.svg");
background-size: cover;
position: absolute;
width: 7px;
height: 10px;
right: 0;
}
.sidebar-tabs-link.active::before {
display: none;
}

.profile-mobile-tab-btn {
position: relative;
}

.profile-mobile-tab-btn::before {
content: "";
background-image: url("./right-arrow.svg");
background-size: cover;
position: absolute;
opacity: 0.6;
width: 7px;
height: 10px;
right: 0;
top: 27px;
transition: all ease-in-out 0.3s;
display: none;
}

.profile-mobile-tab-btn.active::before {
transform: rotate(90deg);
}

