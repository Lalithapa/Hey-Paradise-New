/* Orders tab css ========================================================================= */
.order-history-heading{
  cursor: pointer;
}


.order-history-container,
.profile-addresses-container {
position: static;
}
.order-history-container-open,
.profile-addresses-container-open {
transform: translate(0, 0);
}

.order-history-card {
margin: 16px 0;
}

.order-history-title, .profile-address-title {
color: #393939;
font-size: 18px;
font-weight: 500;
line-height: 28px;
text-transform: capitalize;
margin-bottom: 16px;
}
.order-items-count {
line-height: 24px;
font-size: 16px;
}
.order-status-container {
display: flex;
align-items: center;
gap: 4px;
margin: 2px 0px;
}

.order-status {
color: #393939;
font-size: 15px;
font-weight: 500;
line-height: 20px;
text-transform: uppercase;
}
.order-indicator {
display: inline-block;
height: 6px;
width: 6px;
border-radius: 50%;
}
.order-indicator[data-order-status="pending"] {
background-color: #b1b3e5;
}
.order-indicator[data-order-status="fulfilled"] {
background-color: #79db89;
}
.order-indicator[data-order-status="return"] , .order-indicator[data-order-status="unfulfilled"] {
background-color: #ffbb6b;
}
.order-indicator[data-order-status="cancelled"] {
background-color: #e15d33;
}
.ordered-date {
color: #393939;
font-size: 12px;
font-style: normal;
font-weight: 400;
line-height: 14px;
text-transform: capitalize;
margin: 2px 0px;
}
.ordered-amount {
color: #393939;
font-size: 16px;
font-style: normal;
font-weight: 400;
line-height: 24px;
margin: 2px 0px;
}

.ordered-products-container {
  display: flex;
  gap:6px;
  overflow-x:auto;
}
.ordered-products-container::-webkit-scrollbar {
  height: 5px;
  border-radius:10px;
}

.ordered-products-container::-webkit-scrollbar-thumb {
  background: #7C7C7C;
  border-radius:10px;
  cursor: pointer;
}

.ordered-products-container::-webkit-scrollbar-track {
  background: #F2F2F2;
  border-radius:10px;
}

.ordered-products {
/* padding: 3px; */
width:147px;
}

.ordered-products img {
border: 1px solid #f4f4f4;
aspect-ratio: 3/4;
width:147px;
object-fit: cover;
object-position: center;
}

.profile-tab-main-content {
max-height: 0px;
